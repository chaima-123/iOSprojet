<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/loginCard"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor">


    <LinearLayout
        style="@style/linearParent"
        android:layout_width="match_parent"
        android:layout_height="468dp"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">

        <ImageView
            style="@style/parent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@mipmap/app_logo_round"
            android:contentDescription="login background" />

        <EditText
            android:id="@+id/nomInscription_text"
            style="@style/modifiedEditText"
            android:hint="Nom"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/prenomInscription_text"
            style="@style/modifiedEditText"
            android:hint="Prenom"
            android:inputType="text"
            android:maxLines="1" />


        <EditText
            android:id="@+id/emailInscription_text"
            style="@style/modifiedEditText"
            android:hint="Email"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/NumTel_text"
            style="@style/modifiedEditText"
            android:hint="Numéro télephone"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/passwordInscription_text"
            style="@style/modifiedEditText"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:maxLines="1" />

        <EditText
            android:id="@+id/confirmPasswordInscription_text"
            style="@style/modifiedEditText"
            android:hint="Confirmation mot de passe"
            android:inputType="textPassword"
            android:maxLines="1" />




        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>


        <Button
            android:id="@+id/inscription_button"
            style="@style/loginButton"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:layout_marginTop="20dp"
            android:text="S'inscrire" />
    </LinearLayout>

</androidx.cardview.widget.CardView>